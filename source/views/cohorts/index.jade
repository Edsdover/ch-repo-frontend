form(name='newProjectForm', novalidate)
  .row
    .col-xs-offset-1.col-xs-10
      h1 Create A New Cohort
    .col-xs-1
  .row
    .col-xs-6
      h4.bold Saved Cohorts:
      table.table-bordered.table-hover
        tr
          th.cohortBox Cohort Name
          th.cohortBox # of Students
          th.cohortBox Created
          th.cohortBox Delete
          th.cohortBox Edit
        tr(ng-repeat='cohort in cohorts')
          td.cursor.cohortBox(ng-click='showOneCohort()') {{cohort.cohortName}} &nbsp;
          td.cohortBox.textCenter {{cohort.studentNumber}} &nbsp;
          td.cohortBox.textCenter {{cohort.createdAt | date:'MMM d, y'}} &nbsp;
          td: button.btn.btn-xs.btn-danger.i.fa.fa-trash.cohortBox.cohortBoxButtons(ng-click='deleteCohort(); $event.stopPropagation();')
          td: button.btn.btn-xs.btn-warning.i.fa.fa-edit.cohortBox.cohortBoxButtons(ng-click='editCohort(); $event.stopPropagation();')
    .col-xs-2
      button.btn.btn-success.btn-lg(ui-sref='cohorts.new') New Cohort
