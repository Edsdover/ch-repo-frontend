.row
  .col-xs-offset-1.col-xs-10
    h3.underline.bold {{intro.name}}
.row
  .col-xs-1.col-xs-offset-11
    .container
      i.glyphicon.glyphicon-edit.colorOrange(ng-click='editIntroModal()' type='button' data-toggle='modal' data-target='#editIntroModal')
      i.fa.fa-trash.left3PercPadding.colorRed(title="Delete Intro" ng-click='deleteIntro(intro); $event.stopPropagation();')
.rows
  .col-xs-offset-1.col-xs-10
    h4.underline.top6pxPadding Body:
    h5 {{intro.body}}
#editIntroModal.modal.fade(role='newIntro')
  .modal-dialog
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal') Ã—
        h4.modal-title Edit Intro
      .modal-body
        form(name='newProjectForm', novalidate)
          .row
            .col-xs-offset-1.col-xs-10
              .form-group
                label.bold Title:
                input.form-control(ng-model='intro.name')
              .form-group
                label.bold Body:
                textarea.form-control#projectBody(ng-model='intro.body', rows='10', cols='50')
          .row.col-xs-offset-1
            .col-xs-10
              .form-group
                button.btn.btn-default.btn-lg(type="submit" ng-click='updateIntro(intro)' data-dismiss='modal') Save Edits
                button.btn.btn-default.rightFloat.right10pxMargin(type='button', data-dismiss='modal') Cancel
