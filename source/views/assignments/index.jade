.col-xs-3.borderRight
  .row
    img.img-rounded.img-responsive.logoTumbnail(src='../../media/logo-black-notag.png')
    h3.borderBottom.bold.textCenter.right30PercPadding.bottom20pxMargin Menu:
  .row.top10pxMargin.left4PercMargin
    h5.bold Projects
    button.btn.btn-xs.btn-info.oneHundredMaxWidth.left10PercMargin(ng-if="!projectShow" ng-click="toggleProjects()") Show
    button.btn.btn-xs.btn-warning.oneHundredMaxWidth.left10PercMargin(ng-if="projectShow" ng-click="toggleProjects()") Hide
  .row.top10pxMargin.left4PercMargin
    h5.bold Intros
    button.btn.btn-xs.btn-info.oneHundredMaxWidth.left10PercMargin(ng-if="!introShow" ng-click="toggleIntros()") Show
    button.btn.btn-xs.btn-warning.oneHundredMaxWidth.left10PercMargin(ng-if="introShow" ng-click="toggleIntros()") Hide
  .row.top10pxMargin.left4PercMargin
    h5.bold New
    button.btn.btn-xs.btn-info.oneHundredMaxWidth.left10PercMargin(type='button' data-toggle='modal' data-target='#projectModal') Project
  .row.top10pxMargin.left4PercMargin
    h5.bold New
    button.btn.btn-xs.btn-info.oneHundredMaxWidth.left10PercMargin(type='button' data-toggle='modal' data-target='#introModal') Intro
.col-xs-7.col-xs-offset-4
  .filter.top18pxPadding(ng-show="projectShow")
    h3.left4PercMargin.bold Projects:
    label.left4PercMargin
      | Filter:
      input(ng-model='searchProjects')
    table.table-bordered.table-hover.top25pxMargin(ng-show="projectShow")
      tr
        th.paddingFivePx.textCenter Project Name
        th.paddingFivePx.textCenter Concepts
        th.paddingFivePx.textCenter Tech Used
        th.paddingFivePx.textCenter Edit
        th.paddingFivePx.textCenter Delete
        th.paddingFivePx.textCenter Assign
      tr(ng-repeat='project in projects | filter : searchProjects track by $index')
        td.paddingFivePx.textCenter: a.cursor(ng-click='viewOneProject(project._id)') {{project.name}}
        td.paddingFivePx.textCenter: p.fontSmall(ng-click='viewOneProject(project._id)') {{project.concepts}}
        td.paddingFivePx.textCenter: p.fontSmall(ng-click='viewOneProject(project._id)') {{project.tech}}
        td.paddingFivePx.textCenter: i.glyphicon.glyphicon-edit.cursor.colorOrange(ng-click='editModal()' type='button' data-toggle='modal' data-target='#editProjectModal')
        td.paddingFivePx.textCenter: i.fa.fa-trash.cursor.colorRed(title="Delete Project" ng-click='deleteProjectConfirm(project); $event.stopPropagation();')
        td.paddingFivePx.textCenter: i.fa.fa-plus.textCenter.cursor.colorGreen(ng-click='editModal();' type='button' data-toggle='modal' data-target='#assignModal')
.col-xs-7.col-xs-offset-4
    .filter.top18pxPadding(ng-show="introShow")
      h3.left4PercMargin.bold Intros:
      label.left4PercMargin
        | Filter:
        input(ng-model='searchIntros')
    table.table-bordered.table-hover.top25pxMargin(ng-show="introShow")
      tr
        th.paddingFivePx.textCenter Intro Name
        th.paddingFivePx.textCenter Edit
        th.paddingFivePx.textCenter Delete
        th.paddingFivePx.textCenter Assign
      tr(ng-repeat='intro in intros | filter: searchIntros track by $index')
        td.paddingFivePx.textCenter: a.cursor(ng-click='viewOneIntro(intro._id)') {{intro.name}}
        td.paddingFivePx.textCenter: i.glyphicon.glyphicon-edit.cursor.colorOrange(ng-click='editModal()' type='button' data-toggle='modal' data-target='#editIntroModal')
        td.paddingFivePx.textCenter: i.fa.fa-trash.textCenter.cursor.colorRed(title="Delete Intro" ng-click='deleteIntroConfirm(intro); $event.stopPropagation();')
        td.paddingFivePx.textCenter: i.fa.fa-plus.textCenter.cursor.colorGreen(ng-click='editModal();' type='button' data-toggle='modal' data-target='#assignModal')
#assignModal.modal.fade(role='dialog')
  .modal-dialog
    .modal-content
      .modal-header
        h4.modal-title New Assignment
      .modal-body
        .form-group
          h6 Pick a Cohort
          select.form-control(ng-model='assignment.cohortName' required)
            option(ng-repeat='cohort in cohorts') {{cohort.cohortName}}
        .form-group
          lable Due Date:
          input.form-control(type='text' ng-model='assignment.dueDate' id="datepicker" required)
        .form-group
          h6 Category:
            h5.box Functionality
        .form-group
          h6 Points:
            input.form-control#projectFunctionality(type='number' ng-model='assignment.functionalityPoints')
        .form-group
          h6 Category:
            h5.box Readability
        .form-group
          h6 Points:
            input.form-control#projectReadability(type='number' ng-model='assignment.readabilityPoints')
        .form-group
          h6 Category:
            h5.box HTML/CSS
        .form-group
          h6 Points:
            input.form-control#projectHTML(type='number' ng-model='assignment.htmlPoints')
        .form-group
          h6 Category:
            h5.box JavaScript
        .form-group
          h6 Points:
            input.form-control#projectJavaScript(type='number' ng-model='assignment.javascriptPoints')
          button.btn.btn-default.btn-lg(type='button', data-dismiss='modal') Cancel
          button.btn.btn-success.btn-lg.rightFloat(ng-click='submitAssignment(assignment)', data-dismiss='modal') Submit
#projectModal.modal.fade(role='newProject')
