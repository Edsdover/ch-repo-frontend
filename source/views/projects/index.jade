.col-md-7.col-sm-11
  h4 Projects
  label
    | Filter: 
    input(ng-model='searchProjects')
  .inputButton
    table.table-bordered.table-hover
      tr
        th.projectIntroList.cohortBox Project Name
        th.projectIntroList.cohortBox Core Concepts
        th.projectIntroList.cohortBox Tech Used
        th.cohortBox Edit
        th.cohortBox Delete
        th.cohortBox Assign
      tr(ng-repeat='project in projects | filter : searchProjects track by $index')
        td.projectIntroList.cursor.cohortBox.textCenter
          a(ng-click='viewOneProject(project._id)') {{project.name}}
        td.projectIntroList.cohortBox {{project.concepts}}
        td.projectIntroList.cohortBox {{project.tech}}
        td.cohortBox.textCenter
          button.btn.btn-xs.btn-warning.rightFloat(ng-click='toggleProjectOn()' type='button' data-toggle='modal' data-target='#editProjectModal').glyphicon.glyphicon-edit
        td.cohortBox.textCenter
          button.btn.btn-xs.btn-danger.rightFloat(title="Delete Project" ng-click='deleteProjectConfirm(project); $event.stopPropagation();'): i.fa.fa-trash
        td.projectIntroList.cohortBox.textCenter
          button.btn.btn-xs.btn-success(ng-click='toggleProjectOn();' type='button' data-toggle='modal' data-target='#assignProjectModal') Assign
.col-md-5.col-sm-11
  h4 Intros
  label
    | Filter:
    input(ng-model='searchIntros')
  .inputButton
    table.table-bordered.table-hover
