.row
  .col-md-12.col-xs-11
    h3.underline.bold.leftFloat {{project.name}}
      h4.presetCategory {{project.tech}}
        button.btn.btn-sm.btn-danger.rightFloat(title="Delete Project" ng-click='deleteProject(project); $event.stopPropagation();'): i.fa.fa-trash
.row
  .col-md-6.col-xs-11
    h4.underline.projectScoring Alternatives:
    h5 {{project.alternatives}}
    h4.underline Concepts:
    h5 {{project.concepts}}
    h4.underline Pros:
    h5 {{project.pros}}
    h4.underline References:
    h5 {{project.references}}
  .col-md-6.col-xs-11
    h4.underline.projectScoring Requirements:
    h5 {{project.requirements}}
    h4.underline Deployment Instructions:
    h5 {{project.deployment}}
    h4.underline Notes:
    h5 {{project.notes}}
    h4.underline GitHub URL:
    h5 {{project.githubURL}}
