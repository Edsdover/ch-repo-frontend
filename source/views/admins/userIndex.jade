.row
  .col-xs-12
    h4 Admin Accounts
    button.btn.btn-xs.btn-default(ng-if="!adminShow" ng-click="toggleAdmins()") Show Admins
    button.btn.btn-xs.btn-default(ng-if="adminShow" ng-click="toggleAdmins()") Hide Admins
    .row(ng-show="adminShow")
      .col-xs-12.top18pxPadding
        label
          | Filter:
          input(ng-model='adminList')
    table.table-bordered.table-hover(ng-show="adminShow")
      tr
        th.cursor.textCenter(ng-click="predicate='username'; reverses=!reverse") Username
        th.cursor.textCenter(ng-click="predicate='displayName'; reverse=!reverse") Name
        th.cursor.textCenter(ng-click="predicate='createdAt'; reverse=!reverse") Join Date
        th.cursor.textCenter Move to Student List
      tr.cursor(ng-repeat='admin in admins | orderBy:predicate:reverse | filter: adminList')
        td.textCenter(ng-click='showAdmin()') {{admin.username}}
        td.textCenter(ng-click='showAdmin()') {{admin.displayName}}
        td.textCenter(ng-click='showAdmin()') {{admin.createdAt | date:'MMM d, y'}} &nbsp;
        td: h5.cursor.textCenter(ng-click='toggleAdminOff()') Admin: {{admin.adminUser}}
          .glyphicon.glyphicon-arrow-down
.row.top25pxMargin
  .col-xs-12
    h4 Student Accounts
    button.btn.btn-xs.btn-default(ng-if="!studentShow" ng-click="toggleStudents()") Show Students
    button.btn.btn-xs.btn-default(ng-if="studentShow" ng-click="toggleStudents()") Hide Students
    .row(ng-show="studentShow")
      .col-xs-12.top18pxPadding
        label
          | Filter:
          input(ng-model='studentList')
    table.table-bordered.table-hover(ng-show="studentShow")
      tr
        th.cursor.textCenter(ng-click="predicate='username'; reverse=!reverse") Username
        th.cursor.textCenter(ng-click="predicate='displayName'; reverse=!reverse") Name
        th.cursor.textCenter(ng-click="predicate='createdAt'; reverse=!reverse") Join Date
        th.cursor.textCenter Move to Admin List
      tr.cursor(ng-repeat='student in students | orderBy:predicate:reverse | filter: studentList')
        td.textCenter(ng-click='showUser()') {{student.username}}
        td.textCenter(ng-click='showUser()') {{student.displayName}}
        td.textCenter(ng-click='showUser()') {{student.createdAt | date:'MMM d, y'}} &nbsp;
        td: h5.cursor.textCenter(ng-click='toggleAdminOn()') Admin: {{admin.adminUser}}
          .glyphicon.glyphicon-arrow-up
.row.top25pxMargin
  .col-xs-12
    h4 Saved Cohorts
    button.btn.btn-xs.btn-default(ng-if="!cohortShow" ng-click="toggleCohorts()") Show Cohorts
    button.btn.btn-xs.btn-default(ng-if="cohortShow" ng-click="toggleCohorts()") Hide Cohorts
.row(ng-show="cohortShow")
  .col-xs-12.top18pxPadding
    label
      | Filter:
      input(ng-model='cohortList')
    button.btn.btn-xs.btn-info.left4PercMargin(ng-if="cohortShow" type='button' data-toggle='modal' data-target='#cohortModal') Create a new Cohort
    h4.bold Saved Cohorts:
    table.table-bordered.table-hover
      tr
        th.cursor.textCenter(ng-click="predicate='cohortName'; reverse=!reverse") Cohort Name
        th.cursor.textCenter(ng-click="predicate='studentNumber'; reverse=!reverse") # of Students
        th.cursor.textCenter(ng-click="predicate='createdAt'; reverse=!reverse") Created
        th.cursor.textCenter Delete
      tr(ng-repeat='cohort in cohorts | orderBy:predicate:reverse | filter: cohortList' ng-click='editCohortModal();' type='button' data-toggle='modal' data-target='#editCohortModal')
        td.cursor.textCenter {{cohort.cohortName}} &nbsp;
        td.cursor.textCenter {{cohort.studentNumber}} &nbsp;
        td.cursor.textCenter {{cohort.createdAt | date:'MMM d, y'}} &nbsp;
        td: i.fa.fa-trash.cursor.left45PercMargin.colorRed(ng-click='deleteCohort(); $event.stopPropagation();')
#cohortModal.modal.fade(role='dialog')
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal') ×
        h4.modal-title New Cohort
      .modal-body
        .row
          .col-xs-6.col-xs-offset-3
            .form-group
              label.bold Title:
                input.form-control.bottom20pxMargin(ng-model='modalCohort.cohortName')
              label.bold Cohort Email
                input.form-control.bottom20pxMargin(ng-model='modalCohort.cohortEmail')
        .row
          .col-md-6
            h4 Student List:
            table.table-bordered.table-hover(ng-model='modalListStudent')
              tr
                th.paddingFivePx Name
                th.paddingFivePx Username
                th.paddingFivePx E-mail
                th.paddingFivePx Add to new cohort
              tr(ng-repeat='modalListStudent in modalListStudents track by $index')
                td.paddingFivePx {{modalListStudent.displayName}}
                td.paddingFivePx {{modalListStudent.username}}
                td.paddingFivePx {{modalListStudent.email}}
                td.glyphicon.glyphicon-plus.cursor.left45PercMargin.colorGreen(ng-click='addStudentToList()')
          .col-md-5
            .col-md-12.col-sm-12
              h4 New Cohort Enrolled Students:
            table.table-bordered.table-hover
              tr
                th.paddingFivePx Name
                th.paddingFivePx Username
                th.paddingFivePx E-mail
                th.paddingFivePx Remove from cohort
              tr(ng-repeat='modalCohortStudent in modalCohortStudents track by $index')
                td.paddingFivePx {{modalCohortStudent.displayName}}
                td.paddingFivePx {{modalCohortStudent.username}}
                td.paddingFivePx {{modalCohortStudent.email}}
                td: button.btn.btn-xs.btn-danger.i.fa.fa-trash(ng-click='removeStudentFromList(); $event.stopPropagation();')
        .row
          .col-xs-11.top18pxPadding
            button.btn.btn-success.btn-lg.right10pxMargin(ng-click='saveNewCohort(modalCohort)' ng-hide='isEdit' data-dismiss='modal') Submit
            button.btn.btn-default.right10pxMargin(type='button', data-dismiss='modal') Cancel
#editCohortModal.modal.fade(role='dialog')
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal') ×
        h4.modal-title Edit Cohort
      .modal-body
        .row
          .col-xs-9.col-xs-offset-3
            .form-group
              label.bold Title:
                input.form-control.bottom20pxMargin(ng-model='modalCohort.cohortName')
              label.bold Cohort Email
                input.form-control.bottom20pxMargin(ng-model='modalCohort.cohortEmail')
              button.btn.btn-success.btn-lg.rightFloat.right10pxMargin.top25pxMargin(ng-click='updateCohort(modalCohort)' ng-show='isEdit' data-dismiss='modal') Update
        .row
          .col-md-5
            h4 Student List:
            table.table-bordered.table-hover(ng-model='modalListStudent')
              tr
                th.paddingFivePx Name
                th.paddingFivePx Username
                th.paddingFivePx E-mail
                th.paddingFivePx Add to new cohort
              tr(ng-repeat='modalListStudent in modalListStudents track by $index')
                td.paddingFivePx {{modalListStudent.displayName}}
                td.paddingFivePx {{modalListStudent.username}}
                td.paddingFivePx {{modalListStudent.email}}
                td: i.glyphicon.glyphicon-plus.cursor.left45PercMargin.colorGreen(ng-click='addStudentToList()')
          .col-md-5.col-md-offset-1
            h4 {{modalCohort.cohortName}} : Enrolled Students
            table.table-bordered.table-hover
              tr
                th.paddingFivePx Name
                th.paddingFivePx Username
                th.paddingFivePx E-mail
                th.paddingFivePx Remove from cohort
              tr(ng-repeat='modalCohortStudent in modalCohortStudents track by $index')
                td.paddingFivePx {{modalCohortStudent.displayName}}
                td.paddingFivePx {{modalCohortStudent.username}}
                td.paddingFivePx {{modalCohortStudent.email}}
                td: i.fa.fa-trash.cursor.left45PercMargin.colorRed(ng-click='removeStudentFromList()')
        .row
          .col-xs-11.top18pxPadding
            button.btn.btn-default.right10pxMargin(type='button', data-dismiss='modal') Cancel
