form(name='newProjectForm', novalidate)
  .row
    .col-xs-offset-1.col-xs-10
      h1 Create A New Subject Introduction
    .col-xs-1
  .row
    .col-xs-offset-1.col-xs-10
      .form-group
        label.bold Title:
        input.form-control#projectName(ng-model='intro.name')
      .form-group
        label.bold Body:
        textarea.form-control#projectBody(ng-model='intro.body', rows='10', cols='50')
  .row.col-xs-offset-1
    .col-xs-10
      .form-group
        button.btn.btn-default.btn-lg(ng-if='newItem' ng-click='submit(intro)') Submit
        button.btn.btn-default.btn-lg(ng-if='editItem' ng-click='update(intro)') Submit
