nav.navbar.navbar-default(ng-controller='NavCtrl')
  .container-fluid
    .navbar-header
      button.navbar-toggle.collapsed(data-toggle="collapse", data-target="#navbar")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      img.navbar-brand.cursor(src='media/logo-house-only.png' ui-sref='dashboard')
    #navbar.collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-left(ng-if='adminUser')
        li: a(ui-sref='users.userIndex'): i.fa.fa-plus &nbsp; Admin
        li: a(ui-sref='assignments.index' ng-if='adminUser'): i.fa.fa-list &nbsp; New Assignment
      ul.nav.navbar-nav.navbar-right(ng-hide='activeUser')
        li: a.cursor(ng-hide='activeUser' ng-click='oauth("github")'): i.fa.fa-github.colorBlue &nbsp; LogIn With GitHub
      ul.nav.navbar-nav.navbar-right(ng-show='activeUser')
        li: a.cursor(ng-show='activeUser' ng-click='logout()'): i.fa.fa-sign-out.colorBlue &nbsp; {{displayName}}
